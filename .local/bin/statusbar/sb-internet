#!/bin/sh

# Show wifi ðŸ“¶ and percent strength or ðŸ“¡ if none.
# Show ðŸŒ if connected to ethernet or âŽ if none.
# Show ðŸ”’ if a vpn connection is active
# Show ðŸ•¸ï¸ if a tailscale connection is active

tailscale_connected() {
	tailscale status | grep -q '^[0-9]*\.[0-9]*\.[0-9]*\.[0-9]*'
}

case $BLOCK_BUTTON in
1)
	"$TERMINAL" -e nmtui
	pkill -RTMIN+4 dwmblocks
	;;
3) if tailscale_connected; then
	tailscale_output=$(tailscale status | awk '{ print $1, $2 }' | tr '\n' '\r')
	notify-send "ðŸ•¸ï¸ tailscale status" "$tailscale_output" -i tailscale
else
	notify-send "ðŸŒ Internet module" "\- Click to connect
âŒ: wifi disabled
ðŸ“¡: no wifi connection
ðŸ“¶: wifi connection with quality
âŽ: no ethernet
ðŸŒ: ethernet working
ðŸ”’: protonvpn is active
ðŸ•¸ï¸: tailscale is active
"
fi ;;
6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

wifi_interface=$(ip addr | awk '/^[0-9]+: w/ {print $2}' | tr -d :)
eth_interface=$(ip addr | awk '/^[0-9]+: e/ {print $2}' | tr -d :)

if [ "$wifi_interface" ] && grep -xq 'up' /sys/class/net/"$wifi_interface"/operstate 2>/dev/null; then
	wifiicon="$(awk '/^\s*w/ { print "ðŸ“¶", int($3 * 100 / 70) "% " }' /proc/net/wireless)"
elif [ "$wifi_interface" ]; then
	grep -xq '0x1003' /sys/class/net/"$wifi_interface"/flags && wifiicon="ðŸ“¡ " || wifiicon="âŒ "
fi

vpn_status=""
if ip addr show proton0 2>/dev/null | grep -q "proton0.*UP"; then
	vpn_status="ðŸ”’"
fi

tailscale_status=""
if tailscale_connected; then
	tailscale_status="ðŸ•¸ï¸"
fi

printf "%s%s%s%s\n" "$wifiicon" "$(sed "s/down/âŽ/;s/up/ðŸŒ/" /sys/class/net/"$eth_interface"/operstate 2>/dev/null)" "$vpn_status" "$tailscale_status"
